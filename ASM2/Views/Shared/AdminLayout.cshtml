<!DOCTYPE html>
<html lang="en">

<head>
	<title>BookSaw - Free Book Store HTML CSS Template</title>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="format-detection" content="telephone=no">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="author" content="">
	<meta name="keywords" content="">
	<meta name="description" content="">

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
		  integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

	<link rel="stylesheet" type="text/css" href="~/TemplateCustomerView/css/normalize.css">
	<link rel="stylesheet" type="text/css" href="~/TemplateCustomerView/icomoon/icomoon.css">
	<link rel="stylesheet" type="text/css" href="~/TemplateCustomerView/css/vendor.css">
	<link rel="stylesheet" type="text/css" href="~/TemplateCustomerView/style.css">

</head>

<body data-bs-spy="scroll" data-bs-target="#header" tabindex="0">

	<div id="header-wrap">

		<div class="top-content">
			<div class="container-fluid">
				<div class="row">
					
					

				</div>
			</div>
		</div><!--top-content-->

		<header id="header">
			<div class="container-fluid">
				<div class="row">

					<div class="col-md-2">
						<div class="main-logo">
							<a asp-controller="HomePage" asp-action="Index"><img src="~/TemplateCustomerView/images/main-logo.png" alt="logo"></a>
						</div>

					</div>

					<div class="col-md-10">

						<nav id="navbar">
							<div class="main-menu stellarnav">
								<ul class="menu-list">
									
									<li class="menu-item"><a asp-controller="Books" asp-action="Create" class="nav-link">Add Product</a></li>
									<li class="menu-item"><a asp-controller="Categories" asp-action="Create" class="nav-link">Add category</a></li>
									<li class="menu-item"><a asp-controller="Books" asp-action="Index" class="nav-link">Products List</a></li>
									<li class="menu-item"><a asp-controller="Categories" asp-action="Index" class="nav-link">categories List</a></li>

									<li class="menu-item"><partial name="_LoginPartial" class="nav-link btn btn-outline-dark rounded-pill m-0" target="_blank">@User.Identity?.Name</a></li>
								</ul>

								<div class="hamburger">
									<span class="bar"></span>
									<span class="bar"></span>
									<span class="bar"></span>
								</div>

							</div>
						</nav>

					</div>

				</div>
			</div>
		</header>
	</div><!--header-wrap-->
	@RenderBody()




	<script src="~/TemplateCustomerView/js/jquery-1.11.0.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
			crossorigin="anonymous"></script>
	<script src="~/TemplateCustomerView/js/plugins.js"></script>
	<script src="~/TemplateCustomerView/js/script.js"></script>
</body>

</html>
